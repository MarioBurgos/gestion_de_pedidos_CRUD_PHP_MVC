            for ($i = 0; $i < count($dataToView["data"]); $i++) {
                $pedido = $dataToView["data"][$i];
        ?>
                <div class="row mb-2">
                    <div class="card-body border border-secondary bg-light rounded">
                        <h5 class="card-title"> CÃ³digo: <?php echo $pedido['codigo_pedido']; ?><small> <span class="float-end">Fecha: <?php echo $pedido['fecha']; ?></span></small> </h5>
